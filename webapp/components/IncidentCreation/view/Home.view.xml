<mvc:View controllerName="com.garageseries.Incident_CF.controller.Home" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Page id="page">
		<customHeader>
			<Toolbar>
				<SearchField liveChange=".onFilter"/>
			</Toolbar>
		</customHeader>
		<content>
			<List id="listID" growing="true" growingThreshold="10" items="{path:'reports>/' , parameters: {operationMode: 'Client'}}">
				<items>
					<ObjectListItem title="{reports>title}" icon="{path:'reports>incidentPhotos/0/ID',formatter: '.formatter.src'}" iconDensityAware="false"
						type="Active" press="toDetails">
						<firstStatus>
							<ObjectStatus text="{reports>priority/name}" state="{path:'reports>priority_code',formatter:'.formatter.state'}"/>
						</firstStatus>
						<ObjectAttribute text="{reports>description}"/>
						<ObjectAttribute text="{reports>category/name}" class="category"/>
					</ObjectListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>